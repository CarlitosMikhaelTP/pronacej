                    <ImageView
                        android:id="@+id/imageView24"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:tint="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
